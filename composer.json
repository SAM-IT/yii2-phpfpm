{
    "name": "sam-it/yii2-phpfpm",
    "description": "Create a docker container for your Yii2 APP",
    "type": "yii2-extension",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ],
    "require": {
        "php": "^7.1",
        "docker-php/docker-php": "^2",
        "docker-php/docker-php-api": "4.1.35"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "SamIT\\Yii2\\PhpFpm\\": "src/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9",
        "codeception/codeception": "^2.3",
        "yiisoft/yii2": "^2"
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix --dry-run --verbose --diff",
        "lint-fix": "vendor/bin/php-cs-fixer fix --verbose",
        "test": "vendor/bin/codecept build && phpdbg -qrr vendor/bin/codecept run --no-interaction --coverage-xml"
    }
}
